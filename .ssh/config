# copy to ~/.ssh/config

Host github.com
	ControlMaster auto
	ControlPersist 120

Host *
	# Always use SSH2.
	Protocol 2

	# Use a shared channel for all sessions to the same host,
	# instead of always opening a new one. This leads to much
	# quicker connection times.
	ControlMaster auto
#	ControlPath ~/.ssh/control/%r@%h:%p
	ControlPersist 1800

	# also this stuff
	Compression yes
	TCPKeepAlive yes
	ServerAliveInterval 20
	ServerAliveCountMax 10

Host banjo
     User mcuoco
     Hostname banjo.ucsd.edu
     IdentityFile ~/.ssh/id_rsa

Host tscc1
     User mcuoco
     Hostname tscc-login1.sdsc.edu
     IdentityFile ~/.ssh/id_rsa

Host logg1
     User mcuoco
     Hostname logg-cluster-1.salk.edu
     IdentityFile ~/.ssh/id_rsa

Host iblm1
     User mcuoco
     Hostname iblm1.salk.edu
     IdentityFile ~/.ssh/id_rsa


